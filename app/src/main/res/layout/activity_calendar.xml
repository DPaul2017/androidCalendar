<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCalendar">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/calendar_prev_button"
            android:contentDescription="@string/previous_day_button"
            android:layout_width="70dp"
            android:layout_height="250dp"
            android:src="@drawable/left_arrow" />

        <!-- date title -->
        <LinearLayout
            android:id="@+id/date_display"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/date_display_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/date_display_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="January"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/date_display_date"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:text="17"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="55sp"
                android:textStyle="bold" />
            <!-- date title -->
            <TextView
                android:id="@+id/date_display_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Saturday"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="30sp" />

            <Button
                android:id="@+id/date_display_today"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Go to today"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/calendar_next_button"
            android:contentDescription="@string/next_day_button"
            android:layout_width="70dp"
            android:layout_height="250dp"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:id="@+id/calendar_header"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/monday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/tuesday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/wednesday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/thursday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/friday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/saturday" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/sunday" />
        </LinearLayout>

        <GridView
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contextClickable="true"
            android:numColumns="7"
            app:layout_constraintTop_toBottomOf="@+id/calendar_header" />
        <!-- days view -->

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>